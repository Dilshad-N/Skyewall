<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginLeft="5dp"
    android:layout_gravity="center|top"
    app:cardElevation="8dp">

    <LinearLayout
        android:id="@+id/service_room"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:background="@drawable/room1"
        >

        <View
            android:id="@+id/serviceRoom_img"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".65"
            android:scaleType="fitXY"/>


        <TextView
            android:id="@+id/serviceRoom_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".15"
            android:text="Service Rooms"
            android:gravity="center|left"
            android:textColor="@color/white"
            android:drawableRight="@drawable/ic_favorite"
            android:padding="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:orientation="horizontal"
            android:weightSum="2"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="$12.50/12hour"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:background="@drawable/txt_background_circle"
                android:layout_margin="5dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="District 1"
                android:textColor="@color/white"
                android:gravity="center"/>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>